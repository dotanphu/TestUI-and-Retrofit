<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imgNightLife"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nightlife"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgNightLife" />

    <TextView
        android:layout_width="245dp"
        android:layout_height="56dp"
        android:layout_marginTop="150dp"
        android:text="Connect with others financians"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textFontWeight="600"
        android:textSize="22dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtViewChat"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/chat_input"
        android:drawableEnd="@drawable/ic_chatinput"
        android:hint="  ID / Email / Phone number"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtPass"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:layout_marginTop="365dp"
        android:textColorHint="@color/white"
        app:hintEnabled="false"
        app:hintTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#575656">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/chat_input"
            android:hint="Password"
            android:paddingVertical="10dp"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="120dp"
        android:layout_height="18dp"
        android:layout_marginTop="425dp"
        android:layout_marginRight="42dp"
        android:text="Forgot Password?"
        android:textAlignment="center"
        android:textColor="#ECE8FF"
        android:textFontWeight="600"
        android:textSize="13dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnLogin"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:text="Login"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textFontWeight="400"
        android:textSize="17dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="112dp"
        android:layout_height="30dp"
        android:layout_marginTop="540dp"
        android:text="Or signin up with  "
        android:textAlignment="center"
        android:textColor="#ECE8FF"
        android:textFontWeight="400"
        android:textSize="13dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgVanTay"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/backgroupfour"
        android:src="@drawable/ic_vantay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgGoogle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/backgroupfour"
        android:src="@drawable/ic_google"
        app:layout_constraintStart_toEndOf="@+id/imgVanTay"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgFaceBook"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/backgroupfour"
        android:src="@drawable/ic_fb"
        app:layout_constraintStart_toEndOf="@+id/imgGoogle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgIn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/backgroupfour"
        android:src="@drawable/ic_in"
        app:layout_constraintStart_toEndOf="@+id/imgFaceBook"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="81dp"
        android:layout_height="18dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="680dp"
        android:layout_marginRight="205dp"
        android:text="Version 1.0.1  "
        android:textColor="#99FFFFFF"
        android:textFontWeight="400"
        android:textSize="13dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="114dp"
        android:layout_height="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="680dp"
        android:layout_marginRight="89dp"
        android:gravity="right"
        android:text="Create Account"
        android:textColor="#DEFFFFFF"
        android:textFontWeight="600"
        android:textSize="13dp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/tvVersion"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>